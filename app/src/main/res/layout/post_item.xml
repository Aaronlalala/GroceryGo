<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/postItemRoot"
        android:background="@drawable/post_edge"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/theProfilePic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/girl" />

            <TextView
                android:id="@+id/theName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/theProfilePic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Lucy"
                android:textAllCaps="false"
                android:textColor="#0C0909"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="211dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/theTime"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#25EABC84"
                android:padding="5dp"
                android:text="2:00 PM, Oct. 27th"
                android:textAllCaps="false"
                android:textColor="#0C0909"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/theRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/theTime"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="I wanna buy groceries tomorrow, Join me!"
                android:textAllCaps="false"
                android:textColor="#0C0909"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:background="#303F9F" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/theDestination"
                android:backgroundTint="#25EABC84"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:padding="5dp"
                android:layout_alignParentLeft = "true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Costco"
                android:textFontWeight="500"
                android:textAllCaps="false"
                android:textColor="#0C0909"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/theDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="0.5 m"
                android:textAllCaps="false"
                android:textColor="#0C0909"
                android:textSize="17sp" />

        </RelativeLayout>

    </LinearLayout>
